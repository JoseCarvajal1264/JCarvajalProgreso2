<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JCarvajalProgreso2.JCarvajalPage2"
             Title="JCarvajalPage2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <BoxView Color="Yellow" />
        <Label Text="José"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Column="1"
                 Color="Aqua" />
        <Label Grid.Column="1"
               Text="Luis"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="1"
                 Color="Orange" />
        <Label Grid.Row="1"
               Text="José"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="Magenta" />
        <Label Grid.Row="1"
               Grid.Column="1"
               Text="Luis"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        
    </Grid>
</ContentPage>